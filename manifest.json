{

  "manifest_version": 2,
  "name": "cricinfo-tweakss",
  "version": "1.0",

  "description": "Adds graphs to Cricinfo stats.",

  "permissions": [
    "webRequest",
    "history"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://www.espncricinfo.com/cricketers",
        "*://www.espncricinfo.com/cricketers/*"
      ],
      "js": ["chart.umd.min.js", "cricinfo_graph_tweaks.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ]

}

